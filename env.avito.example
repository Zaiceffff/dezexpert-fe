# Avito Backend Environment Variables
# Скопируйте этот файл в .env.avito и заполните переменные

# Avito OAuth Credentials
# Получите эти данные в личном кабинете разработчика Avito
# https://developers.avito.ru/
AVITO_CLIENT_ID=your_avito_client_id
AVITO_CLIENT_SECRET=your_avito_client_secret

# OpenAI API
# Получите API ключ на https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key

# DezExpert API Integration
# API ключ для интеграции с основным проектом
DEZEXPERT_API_KEY=your_dezexpert_api_key

# JWT Secret для аутентификации
JWT_SECRET=your_jwt_secret_key

# Webhook Signature Secret для безопасности
WEBHOOK_SIGNATURE_SECRET=your_webhook_secret

# Database (опционально, если нужно изменить)
POSTGRES_USER=dez
POSTGRES_PASSWORD=dezpass
POSTGRES_DB=dez_avito

# Redis (опционально, если нужно изменить)
REDIS_PORT=6379
